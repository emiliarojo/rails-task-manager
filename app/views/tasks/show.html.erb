<div class="paper">
  <div class="lines"></div>
  <div class="text">
    <h2><%= @task.title %></h2>
    <p><%= @task.details %></p>
    <% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
    <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
    <% end %>

    <div>
      <i class="fa-solid fa-caret-left"></i> <%= link_to "Back to List", tasks_path, class: "link"  %>
    </div>

    <div>
      <i class="fa-regular fa-pen-to-square"></i> <%= link_to "Edit", edit_task_path(@task), class: "link" %>
    </div>

    <div>
      <i class="fa-regular fa-trash-can"></i> <%= link_to "Delete", delete_task_path(@task), class: "link", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
  <div class="holes hole-top"></div>
  <div class="holes hole-middle"></div>
  <div class="holes hole-bottom"></div>
</div>
